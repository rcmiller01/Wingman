# Homelab Copilot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (at least one cloud provider recommended)
# =============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=

# =============================================================================
# Local LLM (Ollama)
# =============================================================================
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5:7b

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://copilot:CHANGE_ME@postgres:5432/homelab_copilot

# =============================================================================
# Qdrant Vector Store
# =============================================================================
QDRANT_URL=http://qdrant:6333

# =============================================================================
# Proxmox Connection
# =============================================================================
PROXMOX_HOST=
PROXMOX_USER=
PROXMOX_TOKEN_NAME=
PROXMOX_TOKEN_VALUE=
PROXMOX_VERIFY_SSL=false

# =============================================================================
# Backend
# =============================================================================
BACKEND_PORT=3001
NODE_ENV=development

# =============================================================================
# OpenTelemetry
# =============================================================================
OTEL_ENDPOINT=
OTEL_SERVICE_NAME=homelab-copilot-backend

# =============================================================================
# Logging Sinks
# =============================================================================
NTFY_URL=
NTFY_TOPIC=
GOTIFY_URL=
GOTIFY_TOKEN=
SYSLOG_HOST=
SYSLOG_PORT=514

# =============================================================================
# Alerting
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
MATRIX_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
MAKE_WEBHOOK_URL=
PLANE_WEBHOOK_URL=

# =============================================================================
# Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
